//Flying enemy prototype
//Only goes in one direction for now, but cannot turn around, goes in one direction
//Its move in a zig zag movement

using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class ZigZagEnemy : MonoBehaviour
{
    public float speed = 1;
    public float frequency = 5f; 
    public float magnitude = 1f;

    private Rigidbody rb;
    public float health = 3;
    public float maxHealth = 3;
    [SerializeField] private Slider healthBar;

    Vector3 pos;
    Vector3 axis;

    private void Start()
    {
        rb = GetComponent<Rigidbody>();

        pos = transform.position;
        axis = transform.up;

        healthBar.value = health / maxHealth;
    }

    void Update()
    {
        pos += Vector3.left * Time.deltaTime * speed;

        transform.position = pos + axis * Mathf.Sin(Time.time * frequency) * magnitude;

        healthBar.value = health / maxHealth;
    }

    public void TakeDamage(int damage)
    {
        health -= damage;
        if (health <= 0)
        {
            Destroy(gameObject);
        }
    }

}
